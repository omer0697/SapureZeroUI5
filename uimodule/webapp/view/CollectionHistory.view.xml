<mvc:View xmlns:smarttable="sap.ui.comp.smarttable"
    xmlns:tnt="sap.tnt"
    controllerName="sapureZero.sapure.controller.CollectionHistory"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    height="100%"
    >
    <Page id="_IDGenPage1" title="Collection History">
            <smarttable:SmartTable 
                id="smartTableId"
                tableType="ResponsiveTable"
                useVariantManagement="true"
                useTablePersonalisation="true"
                showFullScreenButton="true"
                showVariantManagement="true"
                showDetailsButton="true"
                showTablePersonalisation="true"
                showRowCount="true"
                enableAutoColumnWidth="true"
                entitySet="collectionHistory"
                class="sapUiResponsiveMargin"

            >
                <Table 
                    id="tableId"
                    items="{path: '/collectionHistory'}"
                    width="100%"
                    showNoData="true"
                    growing="true"
                    enableBusyIndicator="true"
                    mode="MultiSelect"
                    alternateRowColors="true"
                    growingThreshold="8"
                    >
                    <columns>
                        <Column id="_IDGenColumn1" >
                            <Label id="_IDGenLabel1" text="ID" />
                        </Column>
                        <Column id="_IDGenColumn2" >
                            <Label id="_IDGenLabel2" text="Collection Name" />
                        </Column>
                        <Column id="_IDGenColumn3" >
                            <Label id="_IDGenLabel4" text="Collection Type" />
                        </Column>
                        <Column id="_IDGenColumn4" >
                            <Label id="_IDGenLabel3" text="Risk Score" />
                        </Column>
                        <Column id="_IDGenColumn5" >
                            <Label id="_IDGenLabel5" text="State" />
                        </Column>
                        <Column id="_IDGenColumn6" >
                            <Label id="_IDGenLabel6" text="Completed" />
                        </Column>
                        <Column id="_IDGenColumn7" >
                            <Label id="_IDGenLabel7" text="Template Name" />
                        </Column>
                        <Column id="_IDGenColumn8" >
                            <Label id="_IDGenLabel8" text="Destination" />
                        </Column>
                        <Column id="_IDGenColumn9" >
                            <Label id="_IDGenLabel9" text="Host" />
                        </Column>
                        <Column id="_IDGenColumn10">
                            <Label id="_IDGenLabel10" text="Client" />
                        </Column>
                        <Column id="_IDGenColumn11">
                            <Label id="_IDGenLabel11" text="System Number" />
                        </Column>
                        <Column id="_IDGenColumn12">
                            <Label id="_IDGenLabel12" text="Short Description" />
                        </Column>
                        <Column id="_IDGenColumn13">
                            <Label id="_IDGenLabel13" text="Created By" />
                        </Column>
                        <Column id="_IDGenColumn14">
                            <Label id="_IDGenLabel14" text="Start Time" />
                        </Column>
                        <Column id="_IDGenColumn15">
                            <Label id="_IDGenLabel15" text="End Time" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem id="_IDGenColumnListItem1">
                            <cells>
                                <Text id="_IDGenText1" text="{id}" />
                                <Text id="_IDGenText2" text="{check_collection_name}" />
                                <Text id="_IDGenText3" text="{check_collection_type}" />
                                <Text id="_IDGenText4" text="{check_result_score}" />
                                <Text id="_IDGenText5" text="{state}" />
                                <Text id="_IDGenText6" text="{check_collection_default}" />
                                <Text id="_IDGenText7" text="{run_template_name}" />
                                <Text id="_IDGenText8" text="{tenant_destination_name}" />
                                <Text id="_IDGenText9" text="{tenant_destination_jco_client_ashost}" />
                                <Text id="_IDGenText10" text="{tenant_destination_jco_client_client}" />
                                <Text id="_IDGenText11" text="{tenant_destination_jco_client_sysnr}" />
                                <Text id="_IDGenText12" text="{run_template_short_description}" />
                                <Text id="_IDGenText13" text="{email}" />
                                <Text id="_IDGenText14" text="{start_date}" />
                                <Text id="_IDGenText15" text="{finish_date}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </smarttable:SmartTable>
    </Page>
</mvc:View>